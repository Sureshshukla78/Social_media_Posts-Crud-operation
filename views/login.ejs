<%- include('./partials/header'); %>
<div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-6">
                <div class="container pt-5">
                    <div class="p-5 text-center bg-light">
                        <h1>Login Now!</h1>
                    </div>
                    <form action="/login" method="POST" class="pt-4">
                        <div class="form-group">
                          <input type="email" class=" p-3 rounded-0 form-control" id="email" name="username" placeholder="Enter email" required>
                        </div>
                        <div class="form-group">
                          <input type="password" class="p-3 rounded-0 form-control" id="password" name="password" placeholder="Password" required>
                        </div>
                        <button type="submit" class="btn rounded-0 p-3 btn-primary btn-block">Log In!</button>
                      </form>
                </div>
            </div>
        </div>   
</div>

<%- include('./partials/footer'); %>