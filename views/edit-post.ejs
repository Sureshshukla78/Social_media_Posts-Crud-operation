<%- include('./partials/header'); %>
<div class="container">
    <div class="container">
        <div class="bg-light p-5"></div>
        <h1 class="text-center">Edit Post</h1>
        <div class="pt-5">
            <form action="/posts/<%= post._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                  <label for="exampleFormControlInput1">Title of post</label>
                  <input type="text" class="form-control" id="exampleFormControlInput1" value="<%= post.title %>" name="postTitle" placeholder="title">
                </div>
                <div class="form-group">
                  <label for="exampleFormControlTextarea1">Post Description</label>
                  <textarea class="form-control" id="exampleFormControlTextarea1" name="desc"  rows="3"><%= post.desc %></textarea>
                </div>
                <div class="form-group">
                  <label for="exampleFormControlInput1">Image URL</label>
                  <input type="text" class="form-control" id="exampleFormControlInput1" value="<%= post.img %>" name="imgLink" placeholder="How i got my First internship">
                </div>
              <button  type="submit" class="btn w-100 btn-primary">Update Post</button>
              </form>
        </div>
    </div>
</div>

<%- include('./partials/footer'); %>